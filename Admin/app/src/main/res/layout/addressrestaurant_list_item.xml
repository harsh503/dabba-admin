<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    app:cardUseCompatPadding="true"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="15dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/name_addR_textView"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="25sp"
            android:text="This is Demo Pick Address" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/addressR_textView"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="25sp"
            android:text="This is Demo Deliver Address"
            android:layout_below="@id/name_addR_textView"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/phoneR_textView"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="25sp"
            android:text="This is Demo Pick Address"
            android:layout_below="@id/addressR_textView"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>